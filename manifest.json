{
  "manifest_version": 3,
  "name": "Kiosk Tab Rotator Pro",
  "version": "0.1.0",
  "description": "Automatically rotates between multiple tabs with individual timers and advanced control features",
  "permissions": ["tabs", "storage", "scripting", "webNavigation", "windows"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "icons": {"16": "icon16.png", "48": "icon48.png", "128": "icon128.png"}
}